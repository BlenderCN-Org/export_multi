##DIM Lights
scene= libooth.ray lstage.ray lhstage.ray lstep.ray lubalcony.ray
scene= lubooth.ray lwbalcony.ray lwubalcony.ray
scene= HMFA1400.ray BO-75_none spot_light step_light wall_light
EXP=20

view= v1 -vf views/corner.vp
view= v2 -vf views/entry.vp
view= v3 -vf views/leftbalc.vp
view= v4 -vf views/middle.vp
view= v5 -vf views/rightbalc.vp
view= v6 -vf views/stair.vf
view= v7 -vf views/row3.vp
view= v8 -vf views/stage.vp
view= p1 -vf views/plan.vp
view= p2 -vf views/ceil.vp

