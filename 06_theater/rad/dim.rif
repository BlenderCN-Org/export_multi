QUALITY=MEDIUM
RESOLUTION=2000 1352 0 
REPORT= 10 dim.err
INDIRECT= 1
AMBFILE=dim.amb
render= -ps 4 -dj .70
render= -av .006 .006 .006 -aa .1 -ad 512 -as 256 -ar 64
render= -ai LTGREY -ai CATWALK -ai REDPLY -ai CONCBLK -ai SPLITFAC

##ALL Scenes
scene= materials.ray scene.ray railing.ray grate.ray

##BRIGHT Lights
